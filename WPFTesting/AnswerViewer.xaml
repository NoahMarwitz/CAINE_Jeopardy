<Window x:Class="WPFTesting.AnswerViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTesting"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="AnswerViewer" Height="200" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="153*"/>
            <RowDefinition Height="116*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="answerText" TextWrapping="Wrap" Text="HOPE YOU DON'T SEE THIS HAH. THE REST OF THIS IS TO FILL OUT THE ANSWER BOX TO SHOW HOW LONG THE BOX TRULY IS. LET'S FILL THIS BOX EVEN MORE. " FontSize="24" Grid.RowSpan="2" Margin="0,0,0,29"/>
        <Button x:Name="togglebutton" Click="Toggle" Content="Toggle Answer Visibility" Margin="0,45,0,0" Grid.Row="1"/>

    </Grid>
</Window>
